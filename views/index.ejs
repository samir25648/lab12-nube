<!DOCTYPE html>
<html>

<head>
  <title>Productos</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
  <style>
    body {
      padding: 20px;
      font-family: Arial, sans-serif;
    }

    h1 {
      margin-bottom: 20px;
      text-align: center;
    }

    .btn-add {
      margin-bottom: 20px;
    }

    .product-image {
      width: 100px;
      height: 100px;
      object-fit: cover;
    }

    .btn-group {
      white-space: nowrap;
    }

    .btn-edit,
    .btn-delete {
      margin-right: 5px;
    }

    table {
      width: 100%;
      text-align: center;
    }

    .table thead th {
      vertical-align: middle;
    }

    .table tbody td {
      vertical-align: middle;
    }

    .btn {
      padding: 6px 12px;
      font-size: 14px;
    }

    .btn-edit {
      background-color: #007bff;
      color: #fff;
      border-color: #007bff;
    }

    .btn-delete {
      background-color: #dc3545;
      color: #fff;
      border-color: #dc3545;
    }

    .btn-add {
      background-color: #28a745;
      color: #fff;
      border-color: #28a745;
    }
  </style>
</head>

<body>
  <div class="container">
    <h1 class="display-4">PRODUCTOS</h1>
    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>
          <th>ID</th>
          <th>NOMBRE</th>
          <th>DESCRIPCIÃ“N</th>
          <th>PRECIO</th>
          <th>IMAGEN</th>
          <th>ACCIONES</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach((row) => { %>
          <tr>
            <td><%= row.id %></td>
            <td><%= row.nombre %></td>
            <td><%= row.descripcion %></td>
            <td>$<%= row.precio %></td>
            <td><img src="<%= row.imagen %>" alt="<%= row.nombre %>" class="product-image"></td>
            <td>
              <div class="btn-group">
                <a class="btn btn-primary btn-edit" href="/up/<%= row.id %>">Editar</a>
                <a class="btn btn-danger btn-delete" href="/delete/<%= row.id %>">Eliminar</a>
              </div>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>

    <a class="btn btn-success btn-add" href="/add">Agregar Nuevo Producto</a>
  </div>
</body>

</html>
